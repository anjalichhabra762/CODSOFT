to_do_list=[]
while True:
    print("1. Add a task")
    print("2. View tasks")
    print("3. Update a task")
    print("4. Delete a task")
    print("5. Exit")
    choice = input("Enter your choice: ")
    if choice=="1":
        task=input("enter the task:")
        to_do_list.append({"task":task , "status":"pending"})
    elif choice=="2":
        print("To-Do List:")
        for index,task in enumerate(to_do_list):
            print(f"{index+1}. {task['task']} - {task['status']}")
    elif choice=="3":
        task_done=int(input("enter the task number to update:"))
        if (task_done<=len(to_do_list)):
            new_status = input("Enter the new status (pending/completed): ")
            to_do_list[task_done - 1]['status'] = new_status
    elif choice=="4":
        task_delete=int(input("enter the task number to delete:"))
        if (task_delete<=len(to_do_list)):
            to_do_list.pop(task_delete-1)
    elif choice=="5":
        break
    else:
        print("invalid choice")
